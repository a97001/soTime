{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-param-reassign": 0,
    "camelcase": 0,
    "no-unused-vars": 1,
    "func-names": 0,
    "indent": 0,
    "max-len": 0,
    "newline-per-chained-call": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": 0,
    "space-before-function-paren": [2,
    {
    "anonymous": "always",
    "named": "never"
    }],
    "no-use-before-define": [2, "nofunc"],
    // TODO: turn on later
    "comma-dangle": [0]
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb/base"]
}
